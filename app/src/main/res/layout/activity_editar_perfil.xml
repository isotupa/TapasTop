<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarPerfilActivity">

    <EditText
        android:id="@+id/cambiarUsernameEPBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nuevo nombre de usuario"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23" />

    <EditText
        android:id="@+id/nombreEPEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <EditText
        android:id="@+id/ap1EPEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Apellido 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nombreEPEdit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.103" />

    <EditText
        android:id="@+id/ap2EPEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Apellido 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toEndOf="@+id/ap1EPEdit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.103" />

    <EditText
        android:id="@+id/emailEPEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cambiarUsernameEPBtn"
        app:layout_constraintTop_toBottomOf="@+id/cambiarUsernameEPBtn"
        app:layout_constraintVertical_bias="0.026" />

    <EditText
        android:id="@+id/ubiEPEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ubicación"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cambiarUsernameEPBtn"
        app:layout_constraintTop_toBottomOf="@+id/cambiarUsernameEPBtn"
        app:layout_constraintVertical_bias="0.146" />

    <EditText
        android:id="@+id/sexoEPEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Género"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cambiarUsernameEPBtn"
        app:layout_constraintTop_toBottomOf="@+id/cambiarUsernameEPBtn"
        app:layout_constraintVertical_bias="0.262" />

    <Button
        android:id="@+id/guardarEPBtn"
        android:layout_width="148dp"
        android:layout_height="47dp"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.817"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bioEPEdit"
        app:layout_constraintVertical_bias="0.19" />

    <Button
        android:id="@+id/cancelarEPBtn"
        android:layout_width="171dp"
        android:layout_height="48dp"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guardarEPBtn"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bioEPEdit"
        app:layout_constraintVertical_bias="0.185" />

    <Button
        android:id="@+id/borrarPerfilEPBtn"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="331dp"
        android:layout_height="53dp"
        android:background="#AA2C2C"
        android:backgroundTint="#632020"
        android:text="Eliminar perfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guardarEPBtn"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="@+id/cancelarEPBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.955" />

    <EditText
        android:id="@+id/bioEPEdit"
        android:layout_width="326dp"
        android:layout_height="159dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Biografía"
        android:inputType="textMultiLine"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cambiarUsernameEPBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.699" />

    <ImageButton
        android:id="@+id/imageButton22"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/cambiarUsernameEPBtn"
        app:layout_constraintEnd_toStartOf="@+id/nombreEPEdit"
        app:layout_constraintHorizontal_bias="0.269"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.181"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>