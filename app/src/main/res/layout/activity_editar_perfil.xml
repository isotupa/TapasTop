<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarPerfilActivity">

    <EditText
        android:id="@+id/bioEPEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Biografía"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cambiarUsernameEPBtn"
        app:layout_constraintVertical_bias="0.687" />

    <EditText
        android:id="@+id/paisEPEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="País"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cambiarUsernameEPBtn"
        app:layout_constraintVertical_bias="0.595" />

    <EditText
        android:id="@+id/cambiarUsernameEPBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nuevo nombre de usuario"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.304" />

    <EditText
        android:id="@+id/nombreEPEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cambiarUsernameEPBtn"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/ap1EPEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Apellido 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cambiarUsernameEPBtn"
        app:layout_constraintVertical_bias="0.134" />

    <EditText
        android:id="@+id/ap2EPEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Apellido 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cambiarUsernameEPBtn"
        app:layout_constraintVertical_bias="0.22" />

    <EditText
        android:id="@+id/emailEPEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cambiarUsernameEPBtn"
        app:layout_constraintVertical_bias="0.32" />

    <EditText
        android:id="@+id/ubiEPEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ubicación"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cambiarUsernameEPBtn"
        app:layout_constraintVertical_bias="0.415" />

    <EditText
        android:id="@+id/sexoEPEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Género"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cambiarUsernameEPBtn"
        app:layout_constraintVertical_bias="0.501" />

    <Button
        android:id="@+id/guardarEPBtn"
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bioEPEdit"
        app:layout_constraintVertical_bias="0.448" />

    <Button
        android:id="@+id/cancelarEPBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bioEPEdit"
        app:layout_constraintVertical_bias="0.448" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/borrarPerfilEPBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar perfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guardarEPBtn"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toEndOf="@+id/cancelarEPBtn"
        app:layout_constraintTop_toBottomOf="@+id/bioEPEdit"
        app:layout_constraintVertical_bias="0.448" />

</androidx.constraintlayout.widget.ConstraintLayout>